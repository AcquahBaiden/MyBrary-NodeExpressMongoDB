<div>
    <label for="title">Title</label>
    <input type="text" name="title" value ="<%= book.title %>">
</div>
<div>
    <label for="title">Author</label>
<select name="author">
    <% authors.forEach(author => { %>
        <% if (author.id === book.author) {%>
        <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
        <% } else {%>
            <option label="<%= author.name %>" value="<%= author.id %>"></option>
            <% } %> 
        <% }) %>
</select>
</div>
<div>
    <label for="title">Pubish Date</label>
    <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label for="title">Page Count</label>
    <input type="number" min="1" name="pageCount" value="<%= book.pageCount %>">
</div>
<div>
    <label for="title">Cover</label>
    <input type="file" name="cover">
</div>
<div>
    <label for="title">Description</label>
    <textarea type="text" name="description" rows="10"> <%= book.description %> </textarea>
</div>